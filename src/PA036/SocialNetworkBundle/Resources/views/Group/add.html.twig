{% extends "PA036SocialNetworkBundle::base.html.twig" %}

{% block title "xxxxx" %}

{% block head %}
<style type="text/css">
html, body {
    padding-top: 0px;
}
</style>

<script type="text/javascript">
$(document).ready(function() {
    $("#form_add").click(function() {
        $.post( "{{ path('group_add') }}", 
            $("#group_add form").serialize()
        ).done(function( data ) {
            var response = jQuery.parseJSON(data);
            if(response.status === "true"){
                parent.jQuery.fancybox.close();
            }
        });

        return false;
    })
});
</script>

{% endblock %}

{% block body %}

<div class="span12">   
    <div id="group_add">
        {{ form_start(form) }}
            {{ form_errors(form) }}

                <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_errors(form.name) }}
                {{ form_widget(form.name, {'attr': {'class': 'input-block-level'}}) }}
                </div>
            
                <div class="form-group">
                {{ form_label(form.description) }}
                {{ form_errors(form.description) }}
                {{ form_widget(form.description, {'attr': {'class': 'input-block-level'}}) }}
                </div>
            
                <div>
                {{ form_widget(form.add, {'attr': {'class': 'btn btn-large btn-primary btn-block'}}) }}
                </div>

        {{ form_end(form) }}
    </div>
</div>            
{% endblock %}