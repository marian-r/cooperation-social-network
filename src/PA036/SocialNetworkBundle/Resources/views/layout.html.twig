{% extends "PA036SocialNetworkBundle::base.html.twig" %}

{% block head %}{% endblock %}

{% block body %}
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container-fluid">
            <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="brand" href="#">Project name</a>
            <div class="nav-collapse collapse">
                <p class="navbar-text pull-right">
                            {% if app.user %}
                        Logged in as {{ app.user.email}} | <a href="{{ path('logout') }}">Logout</a>
                            {% endif %}
                    </p>
                        {% if not app.user %}
                    <ul class="nav navbar-nav pull-right">
                        <li><a href="{{ path('account_register') }}">Create an Account</a></li>
                    </ul>
                        {% endif %}
                    <ul class="nav">
                                {% if app.user %}<li {%  if app.request.get('_route') == 'home' %} class="active" {% endif %}><a href="{{ path('home') }}">Home</a></li>{% endif %}
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>
        <div id="wrap">
            <div class="container-fluid">
                <div class="row-fluid">
                                                  {% for flashMessage in app.session.flashbag.get('notice') %}
                        <div class="flash-message">
                            <em>Notice</em>: {{ flashMessage }}
                        </div>
                    {% endfor %}

                    {% block content %}{% endblock %}


                      {% if code is defined %}
                        <h2>Code behind this page</h2>
                        <div class="block">
                            <div class="symfony-content">{{ code|raw }}</div>
                        </div>
                            {% endif %}
                    </div><!--/span-->
                </div><!--/row-->
            </div><!--/wrap-->

            <div id="footer">
                <div class="container">
                    <p class="text-muted credit">xxx xxx xxx xxx</p>
                </div>
            </div>

        </div>
{% endblock %}
